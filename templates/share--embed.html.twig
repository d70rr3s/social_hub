{#
/**
 * @file
 * Theme implementation for embed share link.
 *
 * Available variables:
 *  - url: The url of the page to be shared.
 *  - type: The type of link representation. Can be one of 'icon' or 'text'. Defaults to 'icon'.
 *  - icon: The icon class when using type 'icon'.
 *  - text: The link text when using type 'text'.
 *  - attributes: HTML attributes for the link element.
 *  - script: Inline Javascript code related to the link.
 *  - embed_value: The embed share code.
 *  - embed_attributes: HTML attributes for the embed element.
 */
#}
{% extends 'share.html.twig' %}
{% block extra_content %}
  <textarea {{ embed_attributes.setAttribute('cols', 5).setAttribute('readonly', 'true') }}>{{ embed_value }}</textarea>
  {{ parent() }}
{% endblock %}
